run = "bash start.sh"
entrypoint = "src/main.js"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[deployment]
build = [
  "sh",
  "-c",
  "npm install && cd backend && npm install && cd .. && npm run build",
]
run = ["sh", "start-prod.sh"]

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3002

[[ports]]
localPort = 5002
externalPort = 3000

[[ports]]
localPort = 5003
externalPort = 3003

[agent]
expertMode = true
