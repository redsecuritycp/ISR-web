run = "bash start.sh"
entrypoint = "src/main.js"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["lsof"]

[deployment]
build = ["npm", "run", "build"]
run = ["bash", "start-prod.sh"]
deploymentTarget = "autoscale"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

[[workflows.workflow]]
name = "Backend Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node backend/server.js"
waitForPort = 5000
